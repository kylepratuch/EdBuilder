<html>
    <head>
        <link rel="stylesheet" href="../../css/bootstrap.css">
        <title>EdBuilder</title>
    </head>

    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="true">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/show_dashboard/{{ user.getId }}">EdBuilder</a>
            </div>

            <div class="navbar-collapse collapse in" id="navbar-collapse" aria-expanded="true">
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout/{{ user.getId }}">Logout</a></li>
                <!-- <li><a href="/about">About</a></li> -->
              </ul>
            </div>
          </div>
        </nav>
        <!-- End navbar -->

        <div class="container">

            <!-- Jumbo -->
            <div class="jumbotron">
                <h2>Welcome to your dashboard, {{ user.getName }}!</h2>
                <p>Let's get to work! Select one of your existing courses, or create a brand new one.</p>

                <p><a href="/show_edit/{{user.getId}}" class="btn btn-warning">Edit your profile</a></p>
            </div>
            <!-- End jumbo -->

            <!-- Courses list -->
            <div class="well">
                <h3>Your courses:</h3>
                {% if courses is not empty %}
                    {% for course in courses %}
                        <a class="btn btn-default btn-lg btn-block" href="/show_course/{{ course.getId }}">{{ course.getTitle }}</a>
                    {% endfor %}
                {% else %}
                    <p>You don't have any courses yet!</p>
                {% endif %}
            </div>
            <!-- End courses list -->

            <!-- Add course form -->
            <div class="well">
                <form class="form-horizontal" action="/add_course/{{user.getId}}" method="post">
                    <fieldset>
                        <div class="form-group">
                            <legend>Add a new course:</legend>
                            <label class="control-label col-lg-2" for="course_title">Title</label>
                            <div class="col-lg-10">
                                <input class="form-control" name="course_title" type="text" required />
                            </div>

                            <label class="control-label col-lg-2" for="course_subject">Subject</label>
                            <div class="col-lg-10">
                                <input class="form-control" name="course_subject" type="text" required />
                            </div>

                            <label class="control-label col-lg-2" for="course_description">Description</label>
                            <div class="col-lg-10">
                                <input class="form-control" name="course_description" type="text" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-success btn-lg">+</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <!-- End add course form -->
        </div>
    </body>
</html>
