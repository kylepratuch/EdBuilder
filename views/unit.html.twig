<html>
    <head>
        <link rel="stylesheet" href="../../css/bootstrap.css">
        <title>EdBuilder</title>
    </head>
    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="true">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">EdBuilder</a>
            </div>

            <div class="navbar-collapse collapse in" id="navbar-collapse" aria-expanded="true">
                <ul class="nav navbar-nav">
                    <li><a href="/show_dashboard/{{user.getId}}">Courses</a></li>
                    <li><a href="/show_course/{{course.getId}}">Units</a></li>
                </ul>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/">Logout</a></li>
                <li><a href="/about">About</a></li>
              </ul>
            </div>
          </div>
        </nav>
        <!-- End Navbar -->

        <div class="container">
            <!-- <p>Title: {{ unit.getTitle }}</p>
            <p>Description: {{ unit.getDescription }}</p>

            <a href="/show_unit_edit/{{ unit.getId }}">Edit this unit</a>
            <form action="/delete_unit/{{ course.getId }}/{{ unit.getId }}">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete Unit</button>
            </form>
            <p>* Deleting a unit currently deletes all lessons tied to it! *</p> -->

            <!-- Jumbo -->
            <div class="jumbotron">
                <p><strong>Title:</strong> {{ unit.getTitle }}</p>
                <p><strong>Description:</strong> {{ unit.getDescription }}</p>

                <form action="/delete_unit/{{ course.getId }}/{{ unit.getId }}">
                    <!-- Edit link is inside form for formatting purposes -->
                    <a class="btn btn-warning" href="/show_unit_edit/{{ unit.getId }}">Edit this course</a>

                    <input name="_method" type="hidden" value="delete">
                    <button type="submit" class="btn btn-danger">Delete this Unit</button>
                </form>
                <p><strong>Heads up!</strong> Deleting a unit will delete its lessons as well.</p>
            </div>
            <!-- End Jumbo -->

            <h3>Lessons in this unit:</h3>
            {% if lessons is not empty %}
            <ul>
                {% for lesson in lessons %}
                <li>
                    <a href="/show_lesson/{{ lesson.getId }}">{{ lesson.getTitle }}</a>
                </li>
                {% endfor %}
            </ul>
            {% else %}
                <p>You don't have any lessons yet!</p>
            {% endif %}

            <h3>Add a new lesson for this unit:</h3>
            <form action="/add_lesson/{{ course.getId }}/{{ unit.getId }}" method="post">
                <label name="lesson_title">Title</label>
                <input name="lesson_title" type="text" />

                <label name="lesson_objective">Objective</label>
                <input name="lesson_objective" type="text" />

                <label name="lesson_materials">Materials Needed</label>
                <input name="lesson_materials" type="text" />

                <label name="lesson_body">Write your lesson procedure here:</label>
                <textarea name="lesson_body"></textarea>

                <button type="submit">Add</button>
            </form>
        </div>
    </body>
</html>
