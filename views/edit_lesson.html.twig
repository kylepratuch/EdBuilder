<html>
    <head>
        <title>EdBuilder</title>
    </head>
    <body>
        <form action="edit_lesson/{{lesson.getId}}" method="post">
            <input name="_method" type="hidden" value="patch" />

            <label name="new_title">New Title</label>
            <input name="new_title" type="text" value={{lesson.getTitle}} required />

            <label name="new_objective">New Objective</label>
            <input name="new_objective" type="text" value={{lesson.getObjective}} required />

            <label name="new_materials">New Materials</label>
            <input name="new_materials" type="text" value={{lesson.getMaterials}} required />

            <label name="new_body">New Body</label>
            <textarea name="new_body" type="text" value={{lesson.getBody}} required></textarea>

            <button type="submit">Update</button>
        </form>
    </body>
</html>
